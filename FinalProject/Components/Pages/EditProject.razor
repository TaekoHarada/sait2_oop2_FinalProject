@page "/ProjectList/{ProjectId}"

<h3 class="fs-4"><i class="bi bi-rocket-takeoff"></i> Edit Project</h3>

<div class="container bg-dark bg-opacity-10 border rounded mt-4 mb-4">

	<EditForm Model="@project">
		<div>
			<label class="col-form-label fw-bold">Project Name</label>
			<InputText id="projectName" @bind-Value="@project.ProjectName" class="form-control form-control-sm" />
		</div>
	</EditForm>

	<div class="mt-3">
		<button @onclick="() => UpdateHandler()" @onclick:preventDefault="true" class="btn btn-primary btn-sm mb-3">Save</button>
	</div>
</div>

<div>
	<button @onclick="() => ReturnPageHandler()" class="btn btn-secondary btn-sm mb-3">Return</button>
</div>
@if (isSaved)
{
	<div class="alert alert-info" role="alert">
		Updated
	</div>
}
