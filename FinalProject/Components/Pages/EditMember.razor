@page "/EditMember/{MemberId}"

<h3 class="fs-4"><i class="bi bi-people-fill"></i> Edit Member</h3>

<div class="container bg-dark bg-opacity-10 border rounded mt-4 mb-4">

	<EditForm Model="@member">
		<div>
			<label class="col-form-label fw-bold">Member Name</label>
			<InputText id="member_name" @bind-Value="@member.MemberName" class="form-control form-control-sm" />
		</div>
		<div>
			<label class="col-form-label fw-bold">E-mail</label>
			<InputText id="member_email" @bind-Value="@member.Email" class="form-control form-control-sm" />
		</div>
		<div>
			<label class="col-form-label fw-bold">Phone</label>
			<InputText id="member_phone" @bind-Value="@member.Phone" class="form-control form-control-sm" />
		</div>
	</EditForm>

	<div class="mt-3">
		<button @onclick="() => UpdateHandler()" @onclick:preventDefault="true" class="btn btn-primary btn-sm mb-3">Save</button>
	</div>
</div>

<div>
	<button @onclick="() => ReturnPageHandler()" class="btn btn-secondary btn-sm mb-3">Return</button>
</div>
@if (isSaved)
{
	<div class="alert alert-info" role="alert">
		Updated
	</div>
}
